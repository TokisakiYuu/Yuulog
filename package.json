{
    "name": "yuulog",
    "version": "0.1.0",
    "description": "best blog system for myself",
    "repository": {
        "type": "git",
        "url": "https://github.com/TokisakiYuu/Yuulog.git"
    },
    "author": "Tokisaki Yuu <tokisakiyuu@qq.com>",
    "license": "MIT",
    "scripts": {
        "build": "npm run build-ts && npm run build-frontend && npm run lint",
        "build-ts": "babel src --extensions \".ts,.tsx\" --out-dir dist",
        "build-frontend": "ts-node scripts/build-frontend.ts",
        "debug": "npm run build && npm run watch-debug",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts,tsx}\" --quiet --fix",
        "serve": "node dist/server.js",
        "serve-debug": "nodemon --inspect dist/server.js",
        "start": "npm run serve",
        "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,Frontend\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run watch-frontend\"",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,Frontend\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\" \"npm run watch-frontend\"",
        "watch-node": "nodemon dist/server.js",
        "watch-test": "npm run test -- --watchAll",
        "watch-frontend": "ts-node scripts/build-frontend-watch.ts",
        "watch-ts": "babel src --extensions \".ts,.tsx\" --out-dir dist --watch"
    },
    "dependencies": {
        "dotenv": "^8.2.0",
        "graphql": "^15.4.0",
        "koa": "^2.13.0",
        "koa-bodyparser": "^4.3.0",
        "koa-compress": "^5.0.1",
        "koa-router": "^10.0.0",
        "koa-static": "^5.0.0",
        "less": "^4.0.0",
        "mime": "^2.4.7",
        "mongoose": "^5.11.12",
        "pug": "^2.0.4",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "styled-components": "^5.2.1",
        "utf8-byte-length": "^1.0.4",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.10",
        "@babel/core": "^7.12.10",
        "@babel/plugin-transform-runtime": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-react": "^7.12.10",
        "@babel/preset-typescript": "^7.12.7",
        "@types/concurrently": "^4.1.0",
        "@types/eslint": "^6.1.1",
        "@types/graphql": "^14.5.0",
        "@types/jest": "^24.9.1",
        "@types/koa": "^2.11.6",
        "@types/koa-bodyparser": "^4.3.0",
        "@types/koa-compress": "^4.0.1",
        "@types/koa-router": "^7.4.1",
        "@types/koa-static": "^4.0.1",
        "@types/less": "^3.0.2",
        "@types/mime": "^2.0.3",
        "@types/mini-css-extract-plugin": "^1.2.2",
        "@types/node": "^12.19.11",
        "@types/pug": "^2.0.4",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/styled-components": "^5.1.7",
        "@types/tapable": "1.0.0",
        "@types/webpack": "^4.41.25",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^2.3.1",
        "@typescript-eslint/parser": "^2.3.1",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.2.2",
        "babel-plugin-macros": "^3.0.1",
        "babel-plugin-styled-components": "^1.12.0",
        "concurrently": "^5.3.0",
        "css-loader": "^5.0.1",
        "eslint": "^6.4.0",
        "eslint-plugin-react": "^7.22.0",
        "jest": "^24.9.0",
        "less-loader": "^7.2.1",
        "mini-css-extract-plugin": "^1.3.3",
        "nodemon": "^1.19.2",
        "style-loader": "^2.0.0",
        "tapable": "1.0.0",
        "ts-jest": "^24.1.0",
        "ts-loader": "^8.0.14",
        "ts-node": "^8.4.1",
        "typescript": "^3.6.3",
        "webpack": "^5.11.1"
    },
    "engines": {
        "node": ">=10.0.0"
    }
}
