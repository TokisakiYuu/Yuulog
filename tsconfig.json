{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "jsx": "react",
        "outDir": "dist",
        "pretty": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/public"
    ]
}
