//- 引入js文件
mixin importScript(src)
    script(src=src defer)
//- 引入css文件
mixin importCss(src)
    link(rel="stylesheet", href=src)
    
doctype html
html(lang="zh-cn")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        title yuulog
        //- 基础script
        +importScript("/common.bundle.js")
        block style
    body
        block header
        block content
        block footer
    //- 其它script
    block script
